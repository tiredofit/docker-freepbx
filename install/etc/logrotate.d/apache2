/var/log/apache2/*
{
    daily
    ifempty
    rotate 7
    missingok
    compress
    dateext
    copytruncate
	sharedscripts
	postrotate
                if /etc/init.d/apache2 status > /dev/null ; then \
                   /etc/init.d/apache2 reload > /dev/null; \
                fi;
	endscript

}
